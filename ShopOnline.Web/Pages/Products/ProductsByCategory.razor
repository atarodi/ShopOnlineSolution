@page "/Category"
@inherits ProductsByCategoryBase


@if (Products == null)
{
       <DisplaySpinner/>
}
else
{
    <h3 class="mb-5">Products:</h3>
    var productCount = Products.Count();
    @if (productCount > 0)
    {
        @foreach(var prdgrp in GetGroupedProductsWithCategory())
        {
            <h4>@GetCategoryName(prdgrp)</h4>
             <div class="row mt-3">
               <DisplayProducts Products="@prdgrp.Take(4)">  </DisplayProducts>
            </div>
            <hr class="mb-3"/>
        }
    }
}